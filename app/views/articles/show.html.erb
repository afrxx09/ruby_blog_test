<h1>
	<%= @article.title %>
</h1>
<p>
	<%= @article.text %>
</p>
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>
<%= render @article.comments %>


<h2>Add comment</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<div>
		<%= f.label :commenter %>
		<%= f.text_field :commenter %>
	</div>
	<div>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>
	<div>
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'Back', articles_path %> | <%= link_to 'Edit', edit_article_path(@article) %>