<h1>Articles</h1>
<%= link_to 'New article', new_article_path %>
<% @articles.each do |article| %>
	<div class="article">
		<h2><%= article.title %></h2>
		<p><%= article.text %></p>
		<p>
			<span><%= link_to 'Show', article_path(article) %></span>
		    <span><%= link_to 'Edit', edit_article_path(article) %></span>
		    <span><%= link_to 'Destroy', article_path(article), method: :delete, data:{ confirm: 'Are you sure?' } %></span>
	    </p>
	</div>
<% end %>